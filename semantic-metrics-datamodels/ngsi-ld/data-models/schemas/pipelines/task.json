{
    "$schema": "http://json-schema.org/schema#",
    "$schemaVersion": "1.0",
    "title": "Task",
    "description": "Entity that represents a task within the SDA.",
    "type": "object",
    "additionalProperties": false,
    "allOf": [
        {
            "$ref": "../entity.json#/definitions/Entity"
        },
        {
            "properties": {
                "type": {
                    "description": "NGSI-LD Entity identifier. It has to be Task",
                    "type": "string",
                    "enum": [
                        "Task"
                    ],
                    "default": "Task"
                },
                "action": {
                    "$ref": "#/definitions/Action"
                },
                "state": {
                    "$ref": "#/definitions/State"
                }
            },
            "required": [
                "type",
                "action"
            ]
        }
    ],
    "definitions": {
        "Action": {
            "description": "Property. Requested action to applied on the task.",
            "type": "object",
            "allOf": [
                {
                    "$ref": "../entity.json#/definitions/Property"
                },
                {
                    "properties": {
                        "value": {
                            "$ref": "#/definitions/ActionOptions"
                        }
                    },
                    "required": [
                        "value"
                    ]
                }
            ],
            "additionalProperties": false
        },
        "ActionOptions": {
            "type": "string",
            "enum": [
                "START",
                "END"
            ]
        },
        "State": {
            "description": "Property. Current state of the task.",
            "type": "object",
            "allOf": [
                {
                    "$ref": "../entity.json#/definitions/Property"
                },
                {
                    "properties": {
                        "value": {
                            "$ref": "#/definitions/StateOptions"
                        }
                    },
                    "required": [
                        "value"
                    ]
                }
            ],
            "additionalProperties": false
        },
        "StateOptions": {
            "type": "string",
            "enum": [
                "BUILDING",
                "CLEANED",
                "FAILED",
                "RUNNING",
                "STOPPED"
            ]
        }
    }
}
