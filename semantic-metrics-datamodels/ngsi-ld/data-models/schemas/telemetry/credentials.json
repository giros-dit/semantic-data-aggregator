{
    "$schema": "http://json-schema.org/schema#",
    "$schemaVersion": "1.0",
    "title": "Credentials",
    "description": "Entity that represents a basic authentication credentials to access network management protocols of a specific network device",
    "type": "object",
    "additionalProperties": false,
    "allOf": [
        {
            "$ref": "../entity.json#/definitions/Entity"
        },
        {
            "properties": {
                "type": {
                    "description": "NGSI-LD Entity identifier. It has to be Credentials",
                    "type": "string",
                    "enum": [
                        "Credentials"
                    ],
                    "default": "Credentials"
                },
                "authenticates": {
                    "oneOf": [
                        {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/Authenticates"
                            }
                        },
                        {
                            "$ref": "#/definitions/Authenticates"
                        }
                    ]
                },
                "password": {
                    "$ref": "#/definitions/Password"
                },
                "username": {
                    "$ref": "#/definitions/Username"
                }
            },
            "required": [
                "type",
                "authenticates",
                "password",
                "username"
            ]
        }
    ],
    "definitions": {
        "Authenticates": {
            "description": "Relationship. Network management protocol that these credentials authenticate.",
            "type": "object",
            "allOf": [
                {
                    "$ref": "../entity.json#/definitions/Relationship"
                },
                {
                    "properties": {
                        "object": {
                            "type": "string"
                        }
                    },
                    "required": [
                        "object"
                    ]
                }
            ],
            "additionalProperties": false
        },
        "Password": {
            "description": "Property. Password of these credentials.",
            "type": "object",
            "allOf": [
                {
                    "$ref": "../entity.json#/definitions/Property"
                },
                {
                    "properties": {
                        "value": {
                            "type": "string"
                        }
                    },
                    "required": [
                        "value"
                    ]
                }
            ],
            "additionalProperties": false
        },
        "Username": {
            "description": "Property. Basic username of these credentials.",
            "type": "object",
            "allOf": [
                {
                    "$ref": "../entity.json#/definitions/Property"
                },
                {
                    "properties": {
                        "value": {
                            "type": "string"
                        }
                    },
                    "required": [
                        "value"
                    ]
                }
            ],
            "additionalProperties": false
        }
    }
}
